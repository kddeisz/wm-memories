<div class="page-header">
	<h1>Subscriptions</h1>
</div>

<table class="table table-striped">
	<thead>
		<th>Email</th>
		<th>Validated</th>
		<th>Created</th>
	</thead>
	<tbody>
		<% @subscriptions.each do |subscription| %>
			<tr>
				<td><%= subscription.email %></td>
				<td><%= subscription.validated? ? 'Yes' : 'No' %></td>
				<td><%= subscription.created_at.utc %></td>
			</tr>
		<% end %>
	</tbody>
</table>
